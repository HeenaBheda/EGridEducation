<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:id="@+id/llaypoutLiveclass">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/yellow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSubject"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnDeleteClass"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:background="@drawable/delete_class_logo"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/className"
                android:textColor="#111"
                android:textSize="15dp"
                android:text=""
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tvSubject"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/classId"
                android:textColor="#111"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/className"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTime"
                android:textSize="15dp"
                android:textColor="#000"
                android:text=""
                android:layout_below="@id/btnDeleteClass"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

  </LinearLayout>